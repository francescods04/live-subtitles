{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Live Subtitles",
  "version": "0.1.0",
  "identifier": "com.francescodelsesto.subtitlesapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LiveNotes AI Dashboard",
        "width": 1100,
        "height": 750,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "overlay",
        "title": "Subtitles",
        "width": 900,
        "height": 160,
        "x": 200,
        "y": 820,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "url": "/overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}